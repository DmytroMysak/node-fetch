{
  "compilerOptions": {
    "target": "ES2022",
    "types": ["node"],
    "lib": ["es2022"],
    "rootDir": "./",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}
